---
import { getCollection } from 'astro:content';
type Props = {
  page: number;
  numberOfPosts: number;
}


const {page, numberOfPosts} = Astro.props;
const postsPerPage = Number(import.meta.env.POSTS_PER_PAGE);

const hasPreviousPosts = page > 1;
const hasNextPosts = numberOfPosts > page * postsPerPage;
---

<div>
  {
    hasPreviousPosts && <a href={`?page=${page - 1}`} class="bg-teal-900 text-white py-3 px-6 rounded-xl">Previous</a>
  }
  
  {
    hasNextPosts && <a href={`?page=${page + 1}`} class="bg-teal-900 text-white py-3 px-6 rounded-xl">Next</a>
  }
</div>